{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "composite": true, /* Enable project compilation */
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/*",
    "**/node_modules/*",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ],
}